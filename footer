    <div class="wave"></div>

    <script>
        function toggleFAQ(element) {
            let answer = element.nextElementSibling;
            let icon = element.querySelector(".icon");

            if (answer.style.display === "block") {
                answer.style.display = "none";
                element.classList.remove("active");
                icon.textContent = "+";
            } else {
                let allAnswers = document.querySelectorAll(".faq-answer");
                let allQuestions = document.querySelectorAll(".faq-question");
                let allIcons = document.querySelectorAll(".faq-question .icon");

                allAnswers.forEach(ans => ans.style.display = "none");
                allQuestions.forEach(q => q.classList.remove("active"));
                allIcons.forEach(ic => ic.textContent = "+");

                answer.style.display = "block";
                element.classList.add("active");
                icon.textContent = "âˆ’";
            }
        }
    </script>

